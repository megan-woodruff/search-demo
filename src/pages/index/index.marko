static function getSearchTerm(query) {
  if (!query || !query.includes("search")) return "seattle skyline";
  return query.split("=")[1].replace(/\+/g, " ");
}
$ const searchTerm = getSearchTerm(input.query);

<app-layout title="Image Search Demo">
  <search-header searchTerm=searchTerm/>
  <search-results searchTerm=searchTerm/>
</app-layout>
